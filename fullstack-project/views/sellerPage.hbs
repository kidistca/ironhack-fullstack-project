<div class="container p-2 pb-5 m-10 pt-3 mt-5 pb-3">
    <h2><strong>Add Product </strong></h2>
</div>

<div class="container">
  <form method="POST" action="/sellerPage" enctype="multipart/form-data">
    <div class="form-group">
    <label for="title">Product Title</label>
      <textarea id="title" class="form-control" name="title" placeholder="Title of the product"></textarea>
    </div>
    <div class="form-group">
      <label for="upload-description">Description</label>
      <textarea id="upload-description" class="form-control" name="description" placeholder="Summary of the product"></textarea>
    </div>
    {{!-- <div class="form-group"> --}}
      {{!-- <label for="upload-deliverytime">Delivery Time (Days)</label>
      <textarea id="upload-description" class="form-control" name="description" placeholder="How much day will your delivery date"></textarea>
    </div> --}}
    <div class="form-group">
      <label for="price">Price</label>
      <input id="price" class="form-control" required type="text" name="price" placeholder="Price">
    </div>
    <div class="form-group">
      <label for="upload-file">Image</label>
      <input id="upload-file" required class="form-control" type="file" name="file">
    </div>
    <div class="form-group">
      <button class="btn btn-outline-secondary btn-lg form-control">Upload Product</button>
    </div>
  </form>
</div>
</div>

<div class="seller-products">
{{#each images}}
<div class="card" style="width: 18rem;">
  <img src="{{this.resizedUrl}} " class="card-img-top" alt="{{this.description}}">
  <div class="card-body">
      <h5 class="card-title">{{this.title}}</h5> 
      <p class="card-text">{{this.description}}</p> 
      <p>{{this.price}}</p>
      <a href="/sellerPage/edit/{{this._id}}" class="btn btn-outline-primary btn-lg">Edit</a>
      <a href="/sellerPage/delete/{{this._id}}" class="btn btn-outline-danger btn-lg">Delete</a>
  </div>
</div>
</form>
{{/each}}
</div>
