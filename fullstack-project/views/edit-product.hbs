<pre>{{product}}</pre>

<div class="container">
  <form method="POST" action="/sellerPage/edit/{{product._id}}">
  
     
     <h1>Change your product details</h1>
     <br>
   <img src="{{product.resizedUrl}} " class="card-img-top" alt="{{product.description}}">
    <label for="upload-description">Product Title</label>
      <input id="upload-description" class="form-control" name="title" value="{{product.title}}"></input>
    </div>
    <div class="form-group">
      <label for="upload-description">Description</label>
      <input id="upload-description" class="form-control" value="{{product.description}}" name="description" placeholder="Summary of the product"></input>
    </div>
    <br>
    <div>
      <label for="price">Price</label>
      <input id="price" required type="text" name="price" value="{{product.price}}"  placeholder="price">
    </div>
    <br>
    <button class="btn btn-primary">Submit</button>
  </form>
</div>
